@model Umbraco13Demo.Web.ViewModels.FooterViewModel

@if (!Model.HasSocialLinks)
{
    return;
}

<footer class="border-top">
    <div class="container px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                    <ul class="list-inline text-center">
                        @foreach (var socialIcon in Model.SocialLinks)
                        {
                            <li class="list-inline-item">
                                <a href="@socialIcon.Url" target="_blank">
                                    <span class="fa-stack fa-lg">
                                        <i class="fas fa-circle fa-stack-2x"></i>
                                        <i class="fab fa-@(socialIcon.Network) fa-stack-1x fa-inverse"></i>
                                    </span>
                                </a>
                            </li>
                        }
                    </ul>
                <div class="small text-center text-muted fst-italic">&copy; Ben Dickman @DateTime.Now.Year</div>
            </div>
        </div>
    </div>
</footer>